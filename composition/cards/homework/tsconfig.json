{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node10",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
